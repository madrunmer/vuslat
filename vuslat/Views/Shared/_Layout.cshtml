<body>
    <div class="top-bar">
        <div class="container">
            <div class="pull-right">
                <a href="https://www.facebook.com/UluslararasiVuslatPlatformu/" target="_blank">
                    <i class="fa fa-facebook"></i>
                </a>
                <a href="https://twitter.com/UlusVuslat" target="_blank">
                    <i class="fa fa-twitter"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="logo-container">
            <div class="pull-left">
                <a href="/">
                    <img src="http://www.vuslatplatformu.com/templates/cepon/images/logo.png" class="logo" />
                </a>
            </div>
            <div class="pull-right"></div>
        </div>
        <div class="menu shadow-1dp">
            <nav class="navbar">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/">Anasayfa</a>
                    </li>
                    <li>
                        <a href="/">Haberler</a>
                    </li>
                    <li>
                        <a href="/">Video Yayınlarımız</a>
                    </li>
                    <li>
                        <a href="/">İrtibat</a>
                    </li>
                    <li>
                        <a href="/">Hakkımızda</a>
                    </li>
                </ul>
                <form action="#" method="get" class="pull-right menu-search">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Ara...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
            </nav>
        </div>
        <div class="contents">
            @RenderBody()

        </div>
        
    </div>
    <footer>
